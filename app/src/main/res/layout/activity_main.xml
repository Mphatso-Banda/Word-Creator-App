<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="splashViewModel"
            type="com.tc.apps.wordcreator.viewmodels.SplashViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/app_bg"
        >

        <ProgressBar
            android:id="@+id/progressBar3"
            style="?android:attr/progressBarStyle"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/relativeLayout" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageVector"
                android:layout_width="193dp"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="100dp"
                tools:srcCompat="@drawable/anime_vector" />
        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/score">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/grid_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:columnCount="3"
                app:rowCount="3"
                android:animateLayoutChanges="true"
                android:layout_marginTop="@dimen/layout_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:orientation="horizontal">

                <Button
                    android:id="@+id/buttonG"
                    android:layout_width="65dp"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/layout_margin"
                    android:text="@{splashViewModel.letter7}"
                    android:textSize="30dp"
                    app:layout_column="2"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/buttonB"
                    android:layout_width="65dp"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/layout_margin"
                    android:text="@{splashViewModel.letter2}"
                    android:textSize="30dp"
                    app:layout_column="0"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/buttonE"
                    android:layout_width="65dp"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/layout_margin"
                    android:text="@{splashViewModel.letter5}"
                    android:textSize="30dp"
                    app:layout_column="2"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/buttonC"
                    android:layout_width="65dp"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/layout_margin"
                    android:text="@{splashViewModel.letter8}"
                    android:textSize="30dp"
                    app:layout_column="1"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/buttonH"
                    android:layout_width="65dp"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/layout_margin"
                    android:text="@{splashViewModel.letter3}"
                    android:textSize="30dp"
                    app:layout_column="2"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/buttonI"
                    android:layout_width="65dp"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/layout_margin"
                    android:text="@{splashViewModel.letter9}"
                    android:textSize="30dp"
                    app:layout_column="0"
                    app:layout_row="0" />

                <Button
                    android:id="@+id/buttonF"
                    android:layout_width="65dp"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/layout_margin"
                    android:text="@{splashViewModel.letter6}"
                    android:textSize="30dp"
                    app:layout_column="1"
                    app:layout_row="2" />

                <Button
                    android:id="@+id/buttonA"
                    android:layout_width="65dp"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/layout_margin"
                    android:text="@{splashViewModel.letter1}"
                    android:textSize="30dp"
                    app:layout_column="0"
                    app:layout_row="1" />

                <Button
                    android:id="@+id/buttonD"
                    android:layout_width="65dp"
                    android:layout_height="64dp"
                    android:layout_margin="@dimen/layout_margin"
                    android:text="@{splashViewModel.letter4}"
                    android:textSize="30dp"
                    app:layout_column="1"
                    app:layout_row="1" />
            </androidx.gridlayout.widget.GridLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="@{@string/score(splashViewModel.score)}"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/answer"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="130dp"
            android:background="@drawable/text_bg"
            android:focusable="false"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingEnd="20dp"

            android:text="@{splashViewModel.getText()}"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="28dp"
            app:layout_constraintBottom_toTopOf="@+id/new_characters"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            />


        <Button
            android:id="@+id/new_characters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Characters"
            android:layout_marginBottom="@dimen/newButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/answer">

            <Button
                android:id="@+id/clear_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Clear" />

            <Button
                android:id="@+id/check_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="20dp"
                android:text="Check" />
        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>